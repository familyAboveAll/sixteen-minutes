  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #F2F2F2;
}
.teacher-wrap {
  border-top: 20rpx solid #F5F5F5;
