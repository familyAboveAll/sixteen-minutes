  align-items: center;
  padding: 23rpx 33rpx 0;
}
.lesson-info .right-arrow {
  font-size: 24rpx;
  color: #9999A7;
  right: 0rpx;
  margin-left: 8rpx;
}
.lesson-info .lesson-tip {
  display: flex;
  padding: 10rpx 33rpx 0;
}
.lesson-info .lesson-tip .span {
  font-size: 24rpx;
  color: #9999A7;
  margin-right: 38rpx;
  display: flex;
  align-items: center;
}
.lesson-info .lesson-tip image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.lesson-video {
  margin: 64rpx 0 62rpx;
}
