  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 33rpx 20rpx;
}
.lesson-video .lesson-card {
  padding: 0 20rpx;
  display: flex;
}
.lesson-video .lesson-card .scroll {
  display: flex;
  width: max-content;
}
.lesson-video .lesson-card .item {
  width: 320rpx;
  height: 152rpx;
  background: #F8F8F8;
  border-radius: 10rpx;
