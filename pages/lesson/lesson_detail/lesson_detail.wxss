  align-items: center;
  background: #fff;
  border-top: 2rpx solid #F3F4F3;
}
.custom-service {
  margin-left: 42rpx;
  margin-right: 43rpx;
}
.custom-service .img-wrap {
  width: 52rpx;
  height: 52rpx;
  margin: 0 auto;
}
.custom-service .p {
  font-size: 24rpx;
  color: #8C8C8C;
}
.pay-btn {
  width: 528rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #FF6F3A;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #FFFFFF;
