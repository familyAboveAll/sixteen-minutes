}
.tab-wrap .selected:after {
  content: '';
  width: 20rpx;
  border: 4rpx solid #FF6F3A;
  position: absolute;
  left: 50%;
  margin-left: -10rpx;
  bottom: 16rpx;
}
.lesson-index .fixed {
  position: fixed;
  left: 0;
  width: 100%;
  top: 0;
}
.lesson-info .lesson-title {
