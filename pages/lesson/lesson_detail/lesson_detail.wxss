  display: inline-block;
}
.lesson-card .item .div {
  color: #3B3B3B;
}
.lesson-card .playing view {
  color: #FF6F3A;
}
.lesson-card .item .free {
  width: 70rpx;
  height: 36rpx;
  line-height: 36rpx;
  background: #FFE4DA;
  border-radius: 30rpx;
  position: absolute;
  right: 9rpx;
  top: 9rpx;
  font-size: 20rpx;
  color: #FE7847;
  text-align: center;
}
.lesson-video .lesson-card .index {
  font-size: 26rpx;
  margin-bottom: 9rpx;
}
.lesson-video .lesson-card .name {
  width: 218rpx;
  padding-left: 17rpx;
  font-size: 26rpx;
  white-space: normal;
}
.lesson-video .play-icon image {
  position: absolute;
  left: 23rpx;
  bottom: 10rpx;
  width: 20rpx;
  height: 20rpx;
}
.summary {
  padding: 0 23rpx 32rpx;
  border-bottom: 20rpx solid #F5F5F5;
}
.summary .p {
  text-align: justify;
  font-size: 26rpx;
  color: #3B3B3B;
  margin-top: 12rpx;
  line-height: 42rpx;
}
#commentTarget {
  min-height: 100vh;
}
