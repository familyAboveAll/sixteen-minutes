/* lesson-list start */
.lesson-list .title {
  height: 84rpx;
  line-height: 84rpx;
  display: flex;
  justify-content: space-between;
  background: #F7F7F7;
  padding: 0 70rpx 0 34rpx;
  position: relative;
}
.lesson-list .title::after {
  content: '';
  position: absolute;
  width: 7rpx;
  height: 23rpx;
  background: #FF6F3A;
  left: 0;
  top: 50%;
  margin-top: -11.5rpx;
}
.lesson-list .name {
  font-size: 28rpx;
  color: #4C4C4C;
}
.lesson-list .title .icon {
  width: 32rpx;
  height: 32rpx;
}
.lesson-list .video-item-wrap {
  transition: all 1s;
  overflow: visible;
  height: 200rpx;
  overflow: hidden;
}
.lesson-list .video-animate {
  height: 0!important;
}
.lesson-list .video-item {
  height: 120rpx;
  padding: 0 26rpx 0 46rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #F2F2F2;
}
.lesson-list .video-item:last-child {
  border-bottom: none;
}
.lesson-list .video-item .left {
  display: flex;
  align-items: center;
}
.lesson-list .video-item .play-icon {
  width: 38rpx;
  height: 34rpx;
  margin-right: 14rpx;
}
.lesson-list .video-item .video-name {
  color: #4C4C4C;
  font-size: 28rpx;
}
.lesson-list .video-item .free {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #FFE4DA;
  border-radius: 30rpx;
  text-align: center;
  color: #FE7847;
  font-size: 24rpx;
}
.lesson-list .video-item .playing {
  display: flex;
  align-items: center;
  color: #FE7847;
  font-size: 28rpx;
}
.lesson-list .playing image {
  width: 24rpx;
  height: 22rpx;
  margin-right: 3rpx;
}
.lesson-list .current .video-name {
  color: #FE7847;
}
.lesson-list .lock {
  width: 38rpx;
  height: 42rpx;
  margin-right: 30rpx;
}
