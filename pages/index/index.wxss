.index-wrap {
  padding-left: 44rpx;
  background: #F7F7FB;
  min-height: 100vh;
  padding-top: 150rpx;
}
.title {
  font-size: 60rpx;
  color: #343937;
  letter-spacing: 0;
  line-height: 80rpx;
  margin: 8px 0 32rpx;
  padding-left: 36rpx;
}
navigator {
  width: 660rpx;
  border-radius: 24rpx;
}
.banner {
  width: 660rpx;
  height: 420rpx;
  margin-bottom: 24rpx;
  position: relative;
}
.banner .text {
  transform: rotateZ(40deg);
  position: absolute;
  right: -2rpx;
  top: 26rpx;
  font-size: 24rpx;
  color: #fff;
}
.banner .bg {
  width: 134rpx;
  height: 102rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}
.index-toast-wrap {
  position: fixed;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .6);
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index-toast {
  width: 658rpx;
  height: 786rpx;
  position: relative;
}
.index-toast .bg {
  width: 658rpx;
  height: 786rpx;
}
.index-toast .coupon {
  width: 444rpx;
  height: 140rpx;
}
.index-toast .coupon-bg {
  width: 444rpx;
  height: 140rpx;
  top: 176rpx;
  left: 50%;
  margin-left: -222rpx;
  position: absolute;
}
.index-toast .close {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: -120rpx;
  left: 50%;
  margin-left: -30rpx;
}
.coupon {
  width: 444rpx;
  height: 140rpx;
  top: 176rpx;
  left: 50%;
  margin-left: -222rpx;
  position: absolute;
  z-index: 20;
  display: flex;
  align-items: center;
}
.coupon .left {
  width: 300rpx;
  text-align: center;
  font-size: 28rpx;
  color: #151515;
}
.coupon .right {
  flex: 1;
  display: flex;
  align-items: baseline;
  justify-content: center;
  color: #F1503A;
  font-size: 24rpx;
}
.coupon .right view {
  font-size: 72rpx;
  color: #F1503A;
}
.coupon .right {
  border-left: 2rpx dashed #EEEEEE;
}
.use-btn {
  width: 336rpx;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  position: absolute;
  left: 50%;
  margin-left: -168rpx;
  bottom: 100rpx;
  display: flex;
  justify-content: center;
}
.use-btn image {
  width: 336rpx;
  height: 92rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.use-btn .text {
  line-height: 92rpx;
  font-size: 32rpx;
  color: #EB502C;
  position: absolute;
  text-align: center;
}